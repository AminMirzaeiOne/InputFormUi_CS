<UserControl x:Class="InputFormUi.Controls.DetailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InputFormUi.Controls"
             Name="detailCard" Foreground="#ffffff">
    <Border  Background="#598BFF" CornerRadius="7" Margin="30 4" BorderThickness="1">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Transparent" />

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#ffffff" />
                    </Trigger>

                    <DataTrigger Binding="{Binding ElementName=detailCard,Path=IsActive}" Value="True">
                        <Setter Property="BorderBrush" Value="#ffffff" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
    </Border>
</UserControl>
